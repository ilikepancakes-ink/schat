{
  "name": "schat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "npx tsx test-security.ts && npx tsx test-api-security.ts",
    "deploy": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1",
    "deploy:docker": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -DeploymentType docker",
    "deploy:docker-compose": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 -DeploymentType docker-compose",
    "health-check": "curl http://localhost:3000/api/health || echo 'Health check endpoint not available'",
    "security-audit": "npm audit && npm run test:security",
    "postbuild": "echo 'Build completed successfully'",
    "render-build": "npm ci && rm -rf .next && npm run build",
    "render-start": "npm start"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.50.3",
    "@types/bcryptjs": "^2.4.6",
    "@types/crypto-js": "^4.2.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/speakeasy": "^2.0.10",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "crypto-js": "^4.2.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "next": "15.3.4",
    "postcss": "^8.4.32",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "speakeasy": "^2.0.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^30.0.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "tsx": "^4.7.0"
  }
}
